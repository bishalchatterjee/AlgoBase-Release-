<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/res_item_2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/theme_cv"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/krona_one"
                android:text="Popular eBooks"
                android:textColor="@color/theme_cv_text"
                android:textSize="20sp"
                android:textStyle="normal" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="70dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:fillViewport="true"
                android:isScrollContainer="true"
                android:measureAllChildren="false"
                android:paddingStart="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:scrollbars="none"
                android:background="@drawable/books_back">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/book1_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/sicp_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book2_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/dsa_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book3_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/cracking_interview_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book4_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/java_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book5_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/self_taught_progrmer_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book6_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/clean_code_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book7_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/pagmatic_programmer_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book8_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/code_at_work_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book9_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/passionate_programmer_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book10_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/effective_java_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book11_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/algorithms_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book12_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/letus_c_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book13_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/python_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book14_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/cpp_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book15_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/android_book"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/book16_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/sixtysecandurhired_book"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:id="@+id/book17_iv"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/more_alt"
                        android:scaleType="fitCenter" />





                </LinearLayout>
            </HorizontalScrollView>


        </com.google.android.material.card.MaterialCardView>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
