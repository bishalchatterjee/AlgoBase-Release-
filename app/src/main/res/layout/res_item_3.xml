<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/res_item_3"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="10dp"
            app:cardElevation="5dp"
            app:cardBackgroundColor="@color/theme_cv"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="@font/krona_one"
                android:text="Popular Websites"
                android:textColor="@color/theme_cv_text"
                android:textSize="20sp"
                android:textStyle="normal" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="70dp"
                android:fillViewport="true"
                android:isScrollContainer="true"
                android:measureAllChildren="false"
                android:padding="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/site1_iv"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/gfg"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/site2_iv"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/hackerrank"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/site3_iv"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/codechef"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/site4_iv"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/codeforces"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/site5_iv"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/spoj"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/site6_iv"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/freecodecamp"
                        android:scaleType="fitXY" />
                    <ImageView
                    android:id="@+id/site7_iv"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icpc"
                    android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/site8_iv"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/leetcode"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/site9_iv"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/w3school"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/site10_iv"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/interviewbit"
                        android:scaleType="fitXY" />






                </LinearLayout>
            </HorizontalScrollView>


        </com.google.android.material.card.MaterialCardView>




    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
